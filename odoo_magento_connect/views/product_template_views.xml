<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <data>
		<record id="product_template_form_view_extend" model="ir.ui.view">
  			<field name="name">product.template.form.view.extend</field>
  			<field name="model">product.template</field>
  			<field name="inherit_id" ref="product.product_template_only_form_view"/>
  			<field name="arch" type="xml">
				<xpath expr="//page[@name='variants']/field[@name='attribute_line_ids']" position="before">
					<group>
  						<group>
							<field name="attribute_set_id" options="{'no_create' : True}"
								   attr="{readonly:[('attribute_line_ids','!=',False)]}"/>
						</group>
					</group>
				</xpath>
			</field>
		</record>
    </data>
  </odoo>
