<odoo>
	<data>
		<record id="product_template_pack_form_inherit" model="ir.ui.view">
			<field name="name">product.template.form.view.pack.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="wk_product_pack.product_pack_core_inherited_product_template_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='pack_stock_management']//.." position="before">
					<group>
						<group>
							<field  name="magento_prod_type"
									attrs="{'required': [('is_pack', '=', True)]}"/>
						</group>
						<group>
						</group>
					</group>
				</xpath>
				<xpath expr="//field[@name='wk_product_pack']//tree//field[@name='product_name']" position="after">
					<field  name="magento_item_title"
							attrs="{'readonly' : [('parent.magento_prod_type', '!=', 'bundle')],
									'required' : [('parent.magento_prod_type', '=', 'bundle')]}"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
